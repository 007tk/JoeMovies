@model IEnumerable<JoeMovies.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Any())
{
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customers</th>
            <th>Discount Rate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(customer.Name, "EditCustomer", "Customers", new { Id = customer.Id }, null)
                </td>
                <td>
                    @customer.MembershipType.Name
                </td>
            </tr>
        }
    </tbody>
</table>
}
else {
    <p>We dont have any customers yet.</p>
}

